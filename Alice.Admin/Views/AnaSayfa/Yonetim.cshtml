@section Scripts{
    <script src="~/Content/js/pages/components/extended/sweetalert2.js" type="text/javascript"></script>
    <script>
        $(function () {

            let textdescription;

            ClassicEditor
                .create(document.querySelector('#textdescription'))
                .then(newEditor => {
                    newEditor.setData("dasdas");
                    textdescription = newEditor;
                })
                .catch(error => {
                    console.error(error);
                });

            $("#metinsave").click(function () {
                if (confirm("Güncelleme Yapmak İstediğine Emin misin?")) {
                    $.ajax({
                        type: "POST",
                        url: "/AnaSayfa/TextUpdate",
                        data: {
                            "title": $("#texttitle").val(),
                            "description": textdescription.getData()
                        },
                        success: function (x) {
                            swal.fire({
                                title: "Metin Güncellemesi Yapılıyor...",
                                text: "Yine destan döktürmüşsün :) Hadi neyse güncelliyorum",
                                timer: 3000,
                                onOpen: function () {
                                    swal.showLoading()
                                }
                            }).then(function (result) {

                            });
                        },
                        dataType: "json"
                    });
                }
            });

            $('.sliderupdate').click(function () {

                var fieldName = $(this).data("id");
                $.ajax({
                    type: "POST",
                    url: "/AnaSayfa/GetSingleSlider",
                    data: {
                        "fieldName": fieldName
                    },
                    success: function (x) {
                        swal.fire({
                            title: "Slider Getiriliyor...",
                            text: "Getiriyorum hemen :)",
                            timer: 2000,
                            onOpen: function () {
                                swal.showLoading()
                            }
                        }).then(function (result) {
                            if (result.dismiss === 'timer') {
                                $("input[name='SliderNumber']").val(fieldName);
                                $("input[Id='SlideTitle']").val(x["slideTitle"]);
                                $("input[Id='SlideButtonTitle']").val(x.slideButtonTitle);
                                $("input[Id='SlideButtonLink']").val(x.slideButtonLink);
                                $(".slideupdatepanel").fadeIn();
                            }
                        });
                    },
                    dataType: "json"
                });
            });

            $('.sliderupdate').click(function () {
                var id = $(this).data("id");
                $("input[name='SliderNumber']").val(id);
            });

            $('.resimara').click(function () {
                var text = $("select[name='ImageSearch']").val();
                $(".galeriload").load("/Tour/GetGallerybyText?text=" + text);
                $('.imageselect').bind("click");
            });

            $('.resimara2').click(function () {
                var text = $("select[name='ImageSearch2']").val();
                $(".galeriload2").load("/Tour/GetGallerybyText?text=" + text);
            });

            $('.categoryfield').click(function () {
                var text = $(this).data("fieldname");
                $('.categoryfield').css({
                    "font-weight": "normal",
                    "font-size":"13px"
                });
                $(this).css({
                    "font-weight": "bold",
                     "font-size":"17px"
                });

                $("input[name='CategorySliderFieldName']").val(text);
            });

            $('#categorysave').click(function () {
                if (confirm("Güncellemek İstediğine Emin misin?")) {
                    var galleryId = $("input[name='GetGalleryByText']").val();
                    var sliderNumberId = $("input[name='CategorySliderFieldName']").val();
                    $.ajax({
                        type: "POST",
                        url: "/AnaSayfa/UpdateCategoryBox",
                        data: {
                            "galleryId": galleryId,
                            "categorySliderFieldName": sliderNumberId,
                            "categoryCheckTitle": $("input[name='categoryCheckTitle']").val()
                        },
                        success: function (x) {
                            if (x == false) {
                                alert("Bir Sorun Var! Lütfen tekrar deneyiniz.");
                            }
                            else {
                                swal.fire({
                                    title: "Güncelleniyor",
                                    text: "Yine mi yaaaaa :) tamam tamam hadi güncelliyorum.",
                                    timer: 2000,
                                    onOpen: function () {
                                        swal.showLoading()
                                    }
                                }).then(function (result) {
                                    window.location.reload(false);
                                });
                            }
                        },
                        dataType: "json"
                    });
                }
            });

            $('.resimekletamamla').click(function () {
                if (confirm("Güncellemek İstediğine Emin misin?")) {
                    var galleryId = $("input[name='GetGalleryByText']").val();
                    var sliderNumberId = $("input[name='SliderNumber']").val();
                    $.ajax({
                        type: "POST",
                        url: "/AnaSayfa/UpdateSlider",
                        data: {
                            "galleryId": galleryId,
                            "sliderNumberId": sliderNumberId,
                            "slideTitle": $("#SlideTitle").val(),
                            "slideButtonTitle": $("#SlideButtonTitle").val(),
                            "slideButtonLink": $("#SlideButtonLink").val()
                        },
                        success: function (x) {
                            if (x == false) {
                                alert("Bir Sorun Var! Lütfen tekrar deneyiniz.");
                            }
                            else {
                                swal.fire({
                                    title: "Slider Güncelleniyor",
                                    text: "Slide Güncelleme konusunda üstüme tanımam :) az bekle güncelliyorum.",
                                    timer: 1000,
                                    onOpen: function () {
                                        swal.showLoading()
                                    }
                                }).then(function (result) {
                                    window.location.reload(false);
                                });
                            }
                        },
                        dataType: "json"
                    });
                }


            });

        });
    </script>
}