@model List<Alice.Service.Model.GalleryPoolDTO>
@{
    ViewData["Title"] = "Galeri Havuzu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link href="~/Content/css/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" />
