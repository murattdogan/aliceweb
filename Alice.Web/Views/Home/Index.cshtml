                        <div class="slideArrows">
                            <button type="button" class="slide-m-prev">
                                <img src="/Content/img/left.png" alt="">
                            </button>
                            <button type="button" class="slide-m-next">
                                <img src="/Content/img/right.png" alt="">
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
